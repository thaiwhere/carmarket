@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

}
@model List<string>

<div id="div-car-list" class="car_list_box">

    @{ Html.RenderPartial("~/Views/Shared/SearchingCriteria.cshtml"); }


    <div class="car-list-header">
        <h3>20 xe được rao bán gần nhất</h3>
    </div>
    <!-- begin list car -->    
    @for (int i = 1; i <= 20; i++)
    {
        var title = "Bán Xe Daewoo Lacetti đăng ký 2009 tư nhân, màu đen còn mới, 318 triệu ";
        var cutomizeTitle = title.Substring(0, 40) + "....(28/02/2016)";

        <div class="car-item-all row-car">

            <div class="car-photo">
                <a href="~/Car/CarDetail">
                    <img title="@title" width="140" height="104" src="/content/images/cars/20151227214928-b769_wm.jpg" alt="@title">

                </a>
            </div>
            <div class="car-title">
                <a href="~/Car/CarDetail">@cutomizeTitle</a>
            </div>
            <div class="car-index-section">
                <div class="car-status">
                    <label class="car-kabel"> Tình trạng </label>
                    <span>:&nbsp;Cũ</span>
                </div>
                <div class="car-madein">
                    <label class="car-kabel">Xuất xứ</label>
                    <span>:&nbsp;Xuất xứ</span>
                </div>
                <div class="car-km">
                    <label class="car-kabel">Km</label>
                    <span>:&nbsp;40.000 km</span>
                </div>
                <div class="car-gear">
                    <label class="car-kabel">Hộp số</label>
                    <span>:&nbsp;Số tự động</span>
                </div>
            </div>
            <div class="car-index-section">
                <div class="car-price">
                    350 triệu
                </div>
                <div class="car-location">
                    <a href="/xe-toyota-vios-ha-noi">Hà Nội</a>
                </div>
                <div class="car-contact-user">
                    Chị Oanh
                </div>
                <div class="car-contact-tel">
                    0901500799
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
<script src="~/Content/scripts/Index.js"></script>
}
