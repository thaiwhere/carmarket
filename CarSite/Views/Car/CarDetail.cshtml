@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

}
@model List<string>

<div id="div-car-detail" class="car-list-box">

    @{ Html.RenderPartial("~/Views/Shared/SearchingCriteria.cshtml", Model); }

    <div class="car-item-all row-car">
        @{ Html.RenderPartial("~/Views/Car/CarDetailImages.cshtml", Model); }

        <div class="car-detail-info">

            <div class="car-title">

                <a href="http://banxehoi.com/xe-daewoo-lacetti-ha-noi/ban-xe--dang-ky-2009-tu-nhan-mau-den-con-moi-318-trieu-aid630947">Bán Xe Daewoo Lacetti đăng ký 2009 tư nhân, màu đen còn mới, 318 triệu</a>
            </div>

            <div class="car-info">
                Tôi cần bán xe Daewoo Laceti sản xuất năm 2009 tên tư nhân xe gia đình sử dụng nên còn chất lượng máy móc êm nội thất đẹp lốp mới đăng kiểm còn dài giá tốt 318 triệu liên hệ Mr Hải 0915558358.
            </div>

            <div class="car-detail-left">
                <div class="car-status-left">
                    <label class="car-label-left"> Tình trạng </label>
                    <span>:&nbsp;Cũ</span>
                </div>
                <div class="car-madein-left">
                    <label class="car-label-left">Xuất xứ</label>
                    <span>:&nbsp;Xuất xứ</span>
                </div>
                <div class="car-km-left">
                    <label class="car-label-left">Km</label>
                    <span>:&nbsp;40.000 km</span>
                </div>
                <div class="car-gear-left">
                    <label class="car-label-left">Hộp số</label>
                    <span>:&nbsp;Số tự động</span>
                </div>
            </div>

            <div class="car-detail-middle">
                <div class="car-price-middle">
                    350 triệu
                </div>
                <div class="car-location-right">

                    <a href="/xe-toyota-vios-ha-noi">Hà Nội</a>
                </div>
                <div class=" car-name-user-right">
                    Chị Oanh
                </div>
                <div class=" car-name-telephone-right">
                    0901500799
                </div>
            </div>

            <div class="car-date-right">
                28/12/2015
            </div>
        </div>
    </div>
        
</div>

<div id="div-car-similar">
    <ul class="car-similar-tab">
        <li id="car-similar-model" class="tabactive"><a href="javascript:void(null);" title="Các xe khác cùng model" onclick="showSimilarCarModel();">Các xe khác cùng model</a></li>
        <li id="car-similar-price" class=""><a href="javascript:void(null);" title="Các xe khác có mức giá xấp xỉ (± 10%)" onclick="showSimilarCarPrice();">Các xe khác có mức giá xấp xỉ (± 10%)</a></li>
    </ul>

    <div class="grid-container">
        <div id="gridCarSimilar" class="freegrid"></div>
    </div>
</div>

@section Scripts
{    
    <script src="~/Content/scripts/SearchingHandler.js"></script>
    <script src="~/Content/scripts/GridRender.js"></script>
    <script src="~/Content/scripts/CarDetail.js"></script>
}