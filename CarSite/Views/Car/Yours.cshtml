@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý đăng tin";
}

@section Styles{

    <link href="~/Content/css/ajax/ajax-loader.css" rel="stylesheet" />

}

<h2 class="title">@ViewBag.Title</h2>

<div style="float:left;margin-left:250px;font-weight:bold"><a href="/car/insert">+ Đăng tin bán xe</a></div>
<div style="float:left;margin-left:20px;font-weight:bold"><a href="/car/buy">+ Đăng tin mua xe</a></div>
<div style="float:left;margin-left:20px;font-weight:bold"><a href="/car/hire">+ Đăng tin cho thuê xe</a></div>

@*<div style="float:right"><a href="/account/manage">Thay đổi thông tin</a></div>*@
@*<div style="float:right"><a href="/account/changepass">Hộp thư</a>&nbsp;&nbsp;|&nbsp;&nbsp;</div>*@

<br />
<hr />

<div id="div-car-yours" class="div-car-tab">
    <ul class="ul-car-tab">
        <li id="car_showing" class="tabactive"><a href="javascript:void(null);" title="Tin đang đăng">Tin đang đăng</a></li>
        <li id="car_waiting" class=""><a href="javascript:void(null);" title="Tin chờ duyệt">Tin chờ duyệt</a></li>
        <li id="car_saled" class=""><a href="javascript:void(null);" title="Xe đã bán">Xe đã bán</a></li>                           
        <li id="car_notAllow" class=""><a href="javascript:void(null);" title="Tin không duyệt">Tin không duyệt</a></li>        
        <li id="car_expired" class=""><a href="javascript:void(null);" title="Tin hết hạn">Tin hết hạn</a></li>     
    </ul>
</div>

<div class="ajax-loader">
    <img src="~/Content/images/common/ajax-loader.gif" class="img-responsive" />
</div>


<div class="grid-container">
    <div id="gridCarShowing" class="freegrid"></div>
    <div id="gridCarWaiting" class="freegrid"></div>
    <div id="gridCarSaled" class="freegrid"></div>  
    <div id="gridCarNotAllow" class="freegrid"></div>      
    <div id="gridCarExpired" class="freegrid"></div>    
</div>           

@section Scripts
{   
    <script>
        var IsAdmin = '@ViewBag.IsAdmin';
    </script>
    
    @Scripts.Render("~/bundles/approve_del_car")
    @Scripts.Render("~/bundles/searchingcar")
    
    <script>        

        handler.showResultSearching();

        var criteria = {            
            ItemsPerPage: ItemsPerPage,
            CurrentPageIndex: 0        
        };

        var SearchingCar = new Car.SearchingCar();
        SearchingCar.YourActiveCar("/Car/YourActiveCar", criteria);        
       
    </script>

}
