<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Xe gia đình việt</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="keywords" content="ôtô 2018, oto 2018, bán xe, mua xe, thuê xe, đăng tin bán xe, đăng tin mua xe, đăng tin thuê xe, ôtô, bán ôtô, mua ôtô, thuê ôtô, đăng tin bán ôtô, đăng tin mua ôtô, đăng tin thuê ôtô">
    <meta name="author" content="www.xegiadinhviet.com">
    <meta name="description" content="Đăng tin Miễn phí Mua, Bán, Thuê Xe Ôtô - Xe bạn nên xem - Xe gia đình việt 2018">
    <meta name="revisit-after" content="1 days">
    <meta name="distribution" content="web">
    <meta http-equiv="refresh" content="600">    
    @Styles.Render("~/bundles/css")
    
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("Styles", required: false)

</head>

<body>    
    <div id="div-parent">
        <div id="div-header">
            <a id="logo" href="http://xegiadinhviet.com" title="oto, mua ban oto">                
            </a>
            <a id="logo_text" href="http://xegiadinhviet.com" title="oto, mua ban oto">                
            </a>
            <div id="div-support">
               <div id="div-login" style="width:100%">
                    <ul>
                        <li><a href="/Account/Register/">Đăng ký</a></li>
                        <li><a href="/Account/Login/" onclick="open_dialog('login-dlg','username1');return false;">Đăng nhập</a></li>                        
                        <li class=""><a href="/Home/Guide">Hướng dẫn</a></li>                                                    
                        <li class=""><a href="/Home/Contact">Liên hệ</a></li>                         
                    </ul>                   
                </div>
               <div id="div-search">
                    @{ Html.RenderPartial("~/Views/Shared/Search.cshtml"); }
                </div>
                @if(System.Web.HttpContext.Current.Session["UserId"] !=null)
                { 
                    <div id="div-user">
                        @Html.Partial("_LoginPartial")
                    </div>
                }
            </div>
        </div>
        <div id="div-menu">
            @{ Html.RenderPartial("~/Views/Shared/Menu.cshtml"); }
        </div>
        <div id="div-content">
            <div id="div-left" class="col-sm-2">
                <div id="div-left-searching">
                    @{ Html.RenderPartial("~/Views/Shared/CarList.cshtml"); }
                </div>
                <div id="div-left-advertise">
                    @{ Html.RenderPartial("~/Views/Shared/PanelLeft.cshtml"); }
                </div>                
         
            </div>
            <div id="div-center" class="narrow-div-center">
                @RenderBody()
            </div>
            <div id="div-right">
                @{ Html.RenderPartial("~/Views/Shared/Slider.cshtml"); }
                @{ Html.RenderPartial("~/Views/Shared/ShowRoom.cshtml"); }                
            </div>
        </div>
        <div id="div-footer">
           @{ Html.RenderPartial("~/Views/Shared/Footer.cshtml"); }
        </div>
    </div>
    
    @Scripts.Render("~/bundles/js")

    @RenderSection("Scripts", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-87955531-1', 'auto');
        ga('send', 'pageview');

    </script>

    <script>

        $(".nav li").click(function () {
            $('.nav li').removeClass('active');
            $(this).addClass('active');

            var id = $(this).attr("id");
            $.cookie("menuIndex", id, { path: '/' });
        });

        var menuIndex = $.cookie("menuIndex");
        if (typeof (menuIndex) != "undefined") {
            $('.nav li').removeClass('active');
            $("#" + menuIndex).addClass('active');
        }
        else {
            var id = "menu_index";
            $("#" + id).addClass('active');
            $.cookie("menuIndex", id, { path: '/' });
        }
       
    </script>

</body>
</html>
